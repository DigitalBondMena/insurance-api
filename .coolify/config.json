{
  "name": "Insurance Management System",
  "description": "Comprehensive insurance management system with multi-insurance support",
  "type": "dockerfile",
  "dockerfile": "Dockerfile",
  "port": 80,
  "health_check": {
    "path": "/api/health",
    "interval": "30s",
    "timeout": "3s",
    "retries": 3,
    "start_period": "40s"
  },
  "volumes": [
    {
      "source": "/var/www/html/storage",
      "destination": "storage-data",
      "type": "persistent"
    },
    {
      "source": "/var/www/html/public/uploads",
      "destination": "uploads-data",
      "type": "persistent"
    }
  ],
  "environment": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "LOG_CHANNEL": "stack",
    "LOG_LEVEL": "error",
    "CACHE_DRIVER": "file",
    "SESSION_DRIVER": "file",
    "QUEUE_CONNECTION": "sync"
  },
  "post_deployment_commands": [
    "php artisan migrate --force",
    "php artisan storage:link",
    "php artisan config:cache",
    "php artisan route:cache",
    "php artisan view:cache"
  ],
  "required_env_vars": [
    "APP_KEY",
    "APP_URL",
    "DB_HOST",
    "DB_PORT",
    "DB_DATABASE",
    "DB_USERNAME",
    "DB_PASSWORD",
    "JWT_SECRET"
  ]
}

